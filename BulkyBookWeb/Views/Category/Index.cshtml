@model IEnumerable<Category>

<div class="container p3">
    <div class="row pt-4 mb-2">
        <div class="col-6">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning"><i class="bi bi-plus-circle"></i> &nbsp; New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category</th>
            <th>Display Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var obj in Model)
            {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td width="5%"><a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a></td>
                    <td width="5%"><a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info"><i class="bi bi-pencil"></i></a></td>
                </tr>
            }
        }
    </tbody>
</table>